{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "sourceMap": false,
    "strict": true,
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noEmitOnError": true,
    "strictNullChecks":true,
    "types": [
      "resize-observer-browser"
    ]
  },
  "include": [
    "src/**/*.ts", "src/resize-detector.js"
  ]
}